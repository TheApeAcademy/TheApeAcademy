// .env template – copy to .env and fill in real values
DATABASE_URL="postgresql://user:password@localhost:5432/apeacademy"

NODE_ENV=production

# JWT
JWT_SECRET="your-secret-key-min-32-chars-required-for-production"
JWT_EXPIRY="7d"

# Flutterwave
FLUTTERWAVE_PUBLIC_KEY="your_public_key"
FLUTTERWAVE_SECRET_KEY="your_secret_key"
FLUTTERWAVE_ENCRYPTION_KEY="your_encryption_key"

# Cloudinary (optional – if using cloud storage)
CLOUDINARY_CLOUD_NAME="your_cloud_name"
CLOUDINARY_API_KEY="your_api_key"
CLOUDINARY_API_SECRET="your_api_secret"

# File uploads
FILE_UPLOAD_MAX_SIZE=52428800
FILE_UPLOAD_DIR="./server/uploads"
ENABLE_CLOUDINARY=false

# Server
PORT=3000
API_BASE_URL="http://localhost:3000"
FRONTEND_URL="http://localhost:5174"

# Logging
LOG_LEVEL="info"
